<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" minHeight="600" minWidth="800"  xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea"
       fx:controller="com.example.onlineservicesemulator.Controller">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <HBox alignment="CENTER" spacing="30">
        <!-- Component A -->
        <ListView maxWidth="200.0">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <CheckBox text="Checkbox 1"/>
                    <CheckBox text="Checkbox 2"/>
                    <CheckBox text="Checkbox 3"/>
                    <CheckBox text="Checkbox 4"/>
                    <CheckBox text="Checkbox 5"/>
                </FXCollections>
            </items>
        </ListView>

        <VBox spacing="20">

            <HBox spacing="30">
                <!-- Component B -->
                <VBox maxHeight="200" maxWidth="100.0" spacing="10">
                    <Label text="Uploaded Files"/>
                    <ListView>
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="File 1.txt"/>
                                <String fx:value="File 2.pdf"/>
                                <String fx:value="File 3.png"/>
                            </FXCollections>
                        </items>
                    </ListView>
                </VBox>

                <VBox spacing="20">
                    <!-- Buttons -->
                    <HBox spacing="20">
                        <Button prefHeight="60" prefWidth="100" text="Upload data file">
                            <font>
                                <Font size="11.0"/>
                            </font>
                        </Button>
                        <Button prefHeight="60" prefWidth="100" text="Delete data file">
                            <font>
                                <Font size="11.0"/>
                            </font>
                        </Button>
                    </HBox>
                    <HBox spacing="20">
                        <Button prefHeight="60" prefWidth="100" text="Start">
                            <font>
                                <Font size="11.0"/>
                            </font>
                        </Button>
                        <Button prefHeight="60" prefWidth="100" text="Stop">
                            <font>
                                <Font size="11.0"/>
                            </font>
                        </Button>
                    </HBox>
                </VBox>

            </HBox>


            <!-- Component C -->
            <TextArea prefWidth="350" text="Console logs...">

            </TextArea>

        </VBox>

    </HBox>
</VBox>
